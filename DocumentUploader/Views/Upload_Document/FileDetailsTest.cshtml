@model IEnumerable<ClassLibrary1.Model.FileDetailsModel>

@{
    ViewBag.Title = "FileDetailsTest";
}

<h2>FileDetailsTest</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelatedTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelatedRecordId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FileName)
    </td>
    <td>
        @if (item.FileContent != null)
        {

            var base64 = Convert.ToBase64String(item.FileContent);
            var imgsrc = string.Format("data:image/png;base64,{0}", base64);
            <img class="card-img-top img-fluid" src="@imgsrc" alt="PDF FILE" style="width: 6rem; height: 5rem;">
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RelatedTo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RelatedRecordId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Note)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreateDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedBy)
    </td>
    <td>
        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
        @Html.ActionLink("Downlaod", "DownLoadFile", new { id = item.Id })
    </td>
</tr>
}

</table>
